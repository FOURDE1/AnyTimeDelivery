                <div class="col-md-6 ">
                    <!-- <label for="selectedType" class="form-label bg-primary">Type</label> -->
                    <select asp-for="@Model.order.TypeOfCategories" id="selectedType" class="form-select rounded-pill" required>
                        <option value="" selected disabled>Select Type</option>
                        <option asp-selected="@Model.order.TypeOfCategories == 'Electronics'">Electronics</option>
                        <option value="Clothing and fashion" asp-selected="@Model.order.TypeOfCategories == 'Clothing and fashion'">Clothing and fashion</option>
                        <option value="Food and groceries" asp-selected="@Model.order.TypeOfCategories == 'Food and groceries'">Food and groceries</option>
                        <option value="Home and household" asp-selected="@Model.order.TypeOfCategories == 'home and household'">Home and household</option>
                        <option value="Health and beauty" asp-selected="@Model.order.TypeOfCategories == 'health and beuty'">Health and beauty</option>
                        <option value="Office supplies" asp-selected="@Model.order.TypeOfCategories == 'office supplies'">Office supplies</option>
                        <option value="Automotive" asp-selected="@Model.order.TypeOfCategories == 'Automotive'">Automotive</option>

                    </select>
                </div>
                <div class="col-md-6 p-2 ">
                    <label asp-for="@Model.order.OrderDate">Order Date:</label>
                    <input asp-for="@Model.order.OrderDate" class="form-control rounded-pill" type="datetime-local" id="OrderDate" name="OrderDate"
                           class="form-control">
                </div>
                <div class="col">
                    <span asp-validation-for="@Model.order.OrderDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 ">
                <input asp-for="@Model.order.NameOfRecipient" type="text" class="form-control rounded-pill" id="NameOfRecipient" placeholder="Name of recipient"
                       required>
                <div class="col">
                    <span asp-validation-for="@Model.order.NameOfRecipient" class="text-danger"></span>
                </div>
            </div><br>

            <div class="col-12 ">
                <input asp-for="@Model.order.PickUpLocation" type="text" class="form-control rounded-pill" id="PickUpLocation" placeholder="PickUpLocation"
                       required>
                <div class="col">
                    <span asp-validation-for="@Model.order.PickUpLocation" class="text-danger"></span>
                </div>
            </div><br>
            <div class="col-12 ">
                <input asp-for="@Model.order.DropOffLocation" type="text" class="form-control rounded-pill" id="DropOffLocation" placeholder="Drop-off Location"
                       required>
                <div class="col">
                    <span asp-validation-for="@Model.order.DropOffLocation" class="text-danger"></span>
                </div>
            </div><br>


            <div class="col-12 ">

