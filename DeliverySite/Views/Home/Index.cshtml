@model DeliverySite.ViewModel.OrderRegisterAppViewData

@{
    ViewData["Title"] = "Home Page";
    // var order = new Order();
}

<Main>
<link rel="stylesheet" href="~/css/styles.css">
<!-- Body Parts  -->

<!-- BODY PART 1 -->
<div class="BodyPart1 d-flex justify-content-center align-items-center container-fluid">
    <div class="row">
        <div class="Leftimage p-5 mg-4 col-md-6">
            <img width="100%" src="images/delivery.png" alt="Delivery">
        </div>
        <div class="RightContent col-md-6 d-flex flex-column justify-content-center align-items-center">
            <div class="align-self-start">
                <h3 class="fw-bold mt-3 text-primary text-uppercase display-7 mb-5">
                    Be Your Own Boss with Flexible
                    Deliveries
                </h3>
            </div>
            <div class="d-flex flex-column justify-content-center align-items-center">
                <div class="text-center">
                    <h4 class="fw-normal mb-4">Deliver When You Want, Earn Passive Income</h4>
                    <h4 class="fw-normal">Take Control of Your Schedule and Earnings</h4>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- BODY PART 2 -->

<div class="BodyPart2 container-fluid row d-flex justify-content-center align-items-center">
    <div id="carousel" class="">

        <div id="signUpIcon" class="prev text-center scrollToDivBtn">
            <img width="20px" src="images/Storefront.svg" alt="not working">
            <h2 display="block">Sign Up & Login</h2>
        </div>

        <div id="TryService" class="selected text-center scrollToDivBtn">
            <img src="images/ScootScoot.svg" alt="not working">
            <h2 display="block">Try Our Service</h2>
        </div>

        <div id="DeliveryInfoIcon" class="next text-center monyImage scrollToDivBtn">

            <img src="images/money-bag.png" alt="not working">
            <h2 display="block">Deliver and Earn</h2>
        </div>

    </div>
</div>


@* Our services *@
<script>
document.getElementById("TryService").addEventListener("click",function(){
    document.getElementById("signupPart").hidden=true;
    document.getElementById("delivery-Info").hidden=true;
    document.getElementById("OurService").hidden=false;


})
document.getElementById("signUpIcon").addEventListener("click",function(){
    document.getElementById("OurService").hidden=true;
    document.getElementById("delivery-Info").hidden=true;
    document.getElementById("signupPart").hidden=false;
    });
document.getElementById("DeliveryInfoIcon").addEventListener("click",function(){
    document.getElementById("OurService").hidden=true;
    document.getElementById("signupPart").hidden=true;
    document.getElementById("delivery-Info").hidden=false;
    });
// Scrolling down
    $(".scrollToDivBtn").click(function() {
        $('html,body').animate({
            scrollTop: $("#targetDiv").offset().top},
            'slow');
    
});


</script>

<!-- BODY PART 3 -->
<div id="targetDiv" class="BodyPart3 container-fluid justify-content-center hiddenP3 ">

<div id="OurService" class="container mt-3">
    <div class="d-block text-center pt-4 pb-2">
        <h2 class="">Order A Service</h2>
    </div>
    <div class="row">


        <div class="container  col-md-4">
            <h2>Category Prices</h2>
            <table class="table">
                <thead class="thead-dark">
                <tr>
                    <th>Category</th>
                    <th>Price</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>Electronics</td>
                    <td>$100</td>
                </tr>
                <tr>
                    <td>Automotive</td>
                    <td>$50</td>
                </tr>
                <tr>
                    <td>Office supplies</td>
                    <td>$20</td>
                </tr>
                <tr>
                    <td>Sports and outdoor</td>
                    <td>$30</td>
                </tr>
                <tr>
                    <td>Health and beauty</td>
                    <td>$15</td>
                </tr>
                <tr>
                    <td>Home and household</td>
                    <td>$25</td>
                </tr>
                <tr>
                    <td>Food and groceries</td>
                    <td>$10</td>
                </tr>
                <tr>
                    <td>Clothing and fashion</td>
                    <td>$35</td>
                </tr>

                </tbody>
            </table>
        </div>

        <form method="post" asp-controller="Home" asp-action="CreateOrder" style="background-color:#C5D5D9"
              class="col-md-6 g-3 gx-5 needs-validation  pt-4 pb-2 my-4 mx-auto rounded" novalidate>

            <div class="col-md-8 pb-3">
                <div class="col-md-6 ">
                    <!-- <label for="selectedType" class="form-label bg-primary">Type</label> -->
                    <select  asp-for="@Model.order.TypeOfCategories" id="selectedType" class="form-select rounded-pill" required>
                        <option value="" selected disabled>Select Type</option>
                        <option value="Electronics" asp-selected="@Model.order.TypeOfCategories == 'Electronics'">Electronics</option>
                        <option value="Clothing and fashion">Clothing and fashion</option>
                        <option value="Food and groceries">Food and groceries</option>
                        <option value="Home and household">Home and household</option>
                        <option value="Health and beauty">Health and beauty</option>
                        <option value="Office supplies">Office supplies</option>
                        <option value="Automotive">Automotive</option>

                    </select>
                </div>
                <div class="col-md-6 p-2 ">
                    <label asp-for="@Model.order.OrderDate">Order Date:</label>
                    <input asp-for="@Model.order.OrderDate" class="form-control rounded-pill" type="datetime-local" id="OrderDate" name="OrderDate"
                           class="form-control">
                </div>
            </div>
            <div class="col-md-6 ">
                <input asp-for="@Model.order.NameOfRecipient" type="text" class="form-control rounded-pill" id="NameOfRecipient" placeholder="Name of recipient"
                       required>
                <div class="valid-feedback">
                    looks good
                </div>
            </div><br>

            <div class="col-12 ">
                <input asp-for="@Model.order.PickUpLocation" type="text" class="form-control rounded-pill" id="PickUpLocation" placeholder="PickUpLocation"
                       required>
                <div class="valid-feedback">
                    looks good
                </div>
            </div><br>
            <div class="col-12 ">
                <input asp-for="@Model.order.DropOffLocation" type="text" class="form-control rounded-pill" id="DropOffLocation" placeholder="Drop-off Location"
                       required>
                <div class="valid-feedback">
                    looks good
                </div>
            </div><br>


            <div class="col-12 ">

                <textarea  asp-for="@Model.order.Comments" class="form-control rounded-pill" id="exampleFormControlTextarea1" rows="1"
                placeholder="Comments" required></textarea>


            </div><br>
            <div class="col-12">
                <button type="submit" class="btn btn-warning rounded-pill">Submit</button>
            </div>

        </form>
    </div>
</div>

<div class="row justify-content-center">

    <section id="signupPart" class="gradient-form px-5 pt-5  mt-5 " hidden>
        <div class="container  ">
