@model Order
@* TakingOrder *@
<form method="post" asp-controller="Deliver" asp-action="">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Confirm taking order</h2>
            <hr/>
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Id"></label>
            <input asp-for="Id" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="NameOfRecipient"></label>
            <input asp-for="NameOfRecipient" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="DropOffLocation"></label>
            <input asp-for="DropOffLocation" disabled class="form-control"/>
        </div>

        <div class="mb-3">
            <label asp-for="OrderDate"></label>
            <input asp-for="OrderDate" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Comments"></label>
            <input asp-for="Comments" disabled class="form-control"/>
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">Confirm Taking Order </button>
        <a asp-controller="Deliver" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}