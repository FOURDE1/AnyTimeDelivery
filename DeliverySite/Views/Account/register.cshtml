@model RegisterAppViewData

<head>
    <title>Register</title>
    <link rel="stylesheet" href="~/css/registerStyles.css">
</head>
<body>


@* choose button *@
<div class="row">
    <div class="row mb-4 ">
        <div class="col-12 text-center mt-4 mb-4">
            <h1>Register As:</h1>
        </div>
        <div class="col-6 d-flex justify-content-center">
            <button id="clientButton" type="button" class="btn btn-primary btn-lg">Normal Client</button>
        </div>
        <div class="col-6 d-flex justify-content-center">
            <input type="hidden" id="IsADelivery" name="IsADelivery"/>

            <button id="deliveryButton" type="button" class="btn btn-primary btn-lg">Delivery Worker</button>

            <script>
                  function setIsADelivery(value) {
                    const isADeliveryInput = document.getElementById('IsADelivery');
                    isADeliveryInput.value = value;
                  }
            </script>


        </div>
    </div>

</div>


@* client section *@

<div id="clientFormSection">
    <!-- Client registration form elements -->
    <!-- Place your client registration form elements here -->
    <div class="container h-100 pb-5 mg-5">
        <div class="row d-flex justify-content-center align-items-center h-100 ">
            <div class="col-xl-9">

                <h1 class="text-white text-center mb-4 pt-4" id="applyNow1">Apply now</h1>
                <div class="container mx-auto mt-5">


                    <div class="row">

                        <form method="post" asp-controller="Account" asp-action="Register" class="row g-3 needs-validation " enctype="multipart/form-data" novalidate>
                            <div class="col-md-6 col-xs-12 col-sm-12">
                                <label asp-for="FirstName" class="form-label">First name</label>
                                <input type="text" class="form-control" asp-for="FirstName" required>
                                <div class="col">
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="col-md-6 col-xs-12 col-sm-12">
                                <label asp-for="LastName" class="form-label">Last name</label>
                                <input type="text" class="form-control" asp-for="LastName" required>
                                <div class="col">
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="col-md-6 col-xs-12 col-sm-12">
                                <label asp-for="UserName" class="form-label">Username</label>
                                <div class="input-group has-validation">
                                    @{
                                        var atSymbol = "@";
                                    }
                                    <span class="input-group-text">@atSymbol</span>
                                    <input asp-for="UserName" type="text" class="form-control"
                                           aria-describedby="inputGroupPrepend" required>


                                </div>
                                <div class="col">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 col-xs-12 col-sm-12">
                                <label asp-for="Email" class="form-label">Email address</label>
                                <div class="input-group has-validation">
                                    <input asp-for="Email" type="email" class="form-control"
                                           aria-describedby="inputGroupPrepend" required>

                                </div>
                                <div class="col">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 col-xs-12 col-sm-12">
                                <label asp-for="PhoneNumber" class="form-label">Phone number</label>
                                <div class="input-group has-validation">
                                    <input asp-for="PhoneNumber" type="tel" class="form-control" id="" aria-describedby="inputGroupPrepend"
                                           required>


                                </div>
                                <div class="col">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="col-md-6 col-xs-12 col-sm-12 mt-3">
                                <label asp-for="NationalId" class="form-label">Enter your national ID</label>
                                <div class="input-group has-validation">
                                    <input asp-for="NationalId" type="number" class="form-control" id="" required>

                                </div>
                                <div class="col">
                                    <span asp-validation-for="NationalId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mx-auto text-center">

                                <select asp-for="City" class="form-select mt-4" required>
                                    <option value="" selected disabled>Select City</option>
                                    <option value="Beirut">Beirut</option>
                                    <option value="Sour">Sour</option>
                                    <option value="Jbeil">Jbeil</option>
                                    <option value="Tripoli">Tripoli</option>
                                    <option value="Saida">Saida</option>
                                    <option value="Zahle">Zahle</option>
                                    <option value="Nabatieh">Nabatieh</option>
                                    <option value="Baalbek">Baalbek</option>
                                    <option value="Jounieh">Jounieh</option>
                                </select>
                                <div class="col">
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mx-auto text-center">

                                <select asp-for="Payment" class="form-select mt-4" required>
                                    <option value="" selected disabled>Select Payment</option>
                                    <option value="Visa">Visa</option>
                                    <option value="Master Card">Master Card</option>
                                    <option value="Paypal">Paypal</option>
                                    <option value="Wish Money">Wish Money</option>
                                    <option value="OMT">OMT</option>
                                    <option value="Binance">Binance</option>

                                </select>
                                <div class="col">
                                    <span asp-validation-for="Payment" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="col-12 mt-5">
                                <label asp-for="Password" class="form-label text-center">Password</label>
                                <input asp-for="Password" type="password" class="form-control" required/>
                                <small class="feedbackDiv"></small>
                                <div class="col">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <label asp-for="VerifyPassword1" class="form-label text-center">Confirm Password:</label>
                                <input asp-for="VerifyPassword1" type="password" class="form-control" required/>

                                <div class="col">
                                    <span asp-validation-for="VerifyPassword1" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="col-12">
                                <div class="form-check mx-auto">
                                    <input class="form-check-input" type="checkbox" asp-for="TermsAndConditions" required data-val="true">
                                    <label class="form-check-label" asp-for="TermsAndConditions">
                                        Agree to terms and conditions
                                    </label>
                                    <div class="col">
                                        <span asp-validation-for="TermsAndConditions" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary" type="submit">Apply</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


