<div class="container h-100 pb-5 mg-5">
    <div class="row d-flex justify-content-center align-items-center h-100 ">
        <div class="col-xl-9">

            <h1 class="text-white text-center mb-4 pt-4" id="applyNow">Apply now</h1>
            <div class="container mx-auto mt-5">


                <form asp-controller="Account" asp-action="Register" method="post" class="row g-3 needs-validation" novalidate>
                    <div class="col-md-6 col-xs-12 col-sm-12">
                        <label asp-for="FirstName" class="form-label">First name</label>
                        <input type="text" class="form-control" asp-for="FirstName" id="validationCustom01" required>
                        <div class="col">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 col-xs-12 col-sm-12">
                        <label asp-for="LastName" class="form-label">Last name</label>
                        <input type="text" class="form-control" asp-for="LastName" id="validationCustom02" required>
                        <div class="col">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 col-xs-12 col-sm-12">
                        <label asp-for="UserName" class="form-label">Username</label>
                        <div class="input-group has-validation">
                            @{
                                var atSymbol = "@";
                            }
                            <span class="input-group-text" id="inputGroupPrepend">@atSymbol</span>
                            <input asp-for="UserName" type="text" class="form-control" id="validationCustomUsername"
                                   aria-describedby="inputGroupPrepend" required>

                        </div>
                        <div class="col">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 col-xs-12 col-sm-12">
                        <label asp-for="Email" class="form-label">Email address</label>
