@model Login

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"/>
</head>
<body>
<div class="row justify-content-center">

    <section id="signupPart" class="gradient-form px-5 pt-5  mt-5 ">
        <div class="container  ">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0">
                            <div class="col-lg-6">
                                <div class="card-body p-3">

                                    <div class="text-center p-2 m-5">
                                        <img src="~/images/logo-cropped.svg"
                                             style="width: 200px;" alt="logo">
                                    </div>

                                    <form asp-controller="Account" asp-action="LogIn" asp-route-returnURL="@Model.ReturnUrl" method="post" class="my-3">
                                        <div class="my-3">
                                            <input type="email" id="form2Example11" class="form-control" asp-for="Username" placeholder="Username"/>
                                        </div>
                                        <div class="col">
                                            <span asp-validation-for="Username" class="text-danger"></span>
                                        </div>

                                        <div class="my-3">
                                            <input type="password" asp-for="Password" id="form2Example22" class="form-control" placeholder="Password"/>
                                        </div>
                                        <div class="col">
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group row">
                                            <div class="offset-sm-2 col-sm-4"><input type="checkbox" title="Remember Me" asp-for="RememberMe" class="form-check">
                                                <label asp-for="RememberMe" >Remember Me</label>
                                                </div>
                                        </div>

                                        <div class="text-center mb-3">
                                            <a asp-controller="" asp-action="" class="btn btn-primary btn-block mx-2" type="button">Log in</a>
                                            <a class="text-muted" href="#!">Forgot password?</a>
                                        </div>

                                        <div class="text-center">
                                            <p class="mb-2">Don't have an account?</p>
                                            <a asp-controller="Account" asp-action="Register" type="button" class="btn btn-outline-danger">Create new</a>
                                        </div>
                                    </form>

                                </div>
                            </div>
                            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                                <div class="text-white px-3 py-4 p-md-4">
                                    <h4 class="mb-3">We are more than just a company</h4>
                                    <p class="small mb-0">
                                        Unlock a world of convenience and possibilities with our fast and reliable delivery service. Experience seamless shopping, prompt deliveries, and exceptional customer service. Trust us to bring what you need, right to your doorstep.
                                    </p>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>
</body>
</html>